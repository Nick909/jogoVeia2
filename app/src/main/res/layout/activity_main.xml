<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0025FF">

    <TextView
        android:id="@+id/txtWlcm"
        android:layout_width="411dp"
        android:layout_height="59dp"
        android:text="Welcome to the jungle"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textFontWeight="48"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="237dp" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="75dp"
        android:layout_height="42dp"
        android:layout_marginTop="328dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/txtLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.30"
        app:layout_constraintStart_toEndOf="@+id/txtLogin"
        app:layout_constraintTop_toTopOf="@+id/txtLogin"/>

    <TextView
        android:id="@+id/txtSenha"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:text="Password"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/txtLogin"
        app:layout_constraintTop_toBottomOf="@+id/txtLogin" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/txtSenha"
        app:layout_constraintStart_toStartOf="@+id/edtLogin"
        app:layout_constraintTop_toBottomOf="@+id/edtLogin"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:layout_marginTop="64dp"
        android:onClick="entrar"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:shadowDx="100"
        android:shadowDy="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSenha"
        android:background="#FFC700"/>

</androidx.constraintlayout.widget.ConstraintLayout>